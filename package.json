{
    "name": "@andrao/tailwind",
    "version": "1.0.0",
    "homepage": "https://github.com/andrao/tailwind#readme",
    "bugs": {
        "url": "https://github.com/andrao/tailwind/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/andrao/tailwind.git"
    },
    "license": "MIT",
    "author": "andrao",
    "type": "module",
    "exports": {
        ".": "./dist/index.js",
        "./tailwind.css": "./tailwind.css"
    },
    "scripts": {
        "build": "rm -rf ./dist && tsc",
        "format": "prettier --check .",
        "format:fix": "prettier --write .",
        "prepack": "pnpm run build",
        "prepare": "husky",
        "typecheck": "tsc --noEmit"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "release": {
        "branches": [
            "+([0-9])?(.{+([0-9]),x}).x",
            "main",
            "next",
            "next-major",
            {
                "name": "beta",
                "prerelease": true
            },
            {
                "name": "alpha",
                "prerelease": true
            }
        ],
        "plugins": [
            "@semantic-release/commit-analyzer",
            "@semantic-release/release-notes-generator",
            "@semantic-release/npm",
            "@semantic-release/github",
            [
                "@semantic-release/git",
                {
                    "assets": [
                        "CHANGELOG.md",
                        "package.json",
                        "pnpm-lock.yaml"
                    ],
                    "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
                }
            ]
        ]
    },
    "dependencies": {
        "autoprefixer": "^10.4.19",
        "postcss": "^8.4.38",
        "tailwindcss": "^3.4.3",
        "tailwindcss-animate": "^1.0.7"
    },
    "devDependencies": {
        "@andrao/tsconfig": "^0.1.0",
        "@semantic-release/git": "^10.0.1",
        "commitizen": "^4.3.0",
        "cz-conventional-changelog": "^3.3.0",
        "husky": "^9.0.11",
        "prettier": "^3.2.5",
        "prettier-plugin-packagejson": "^2.4.13",
        "semantic-release": "^23.0.6",
        "typescript": "^5.4.3"
    },
    "packageManager": "pnpm@8.14.1",
    "publishConfig": {
        "access": "public",
        "provenance": true
    },
    "pnpm": {
        "patchedDependencies": {
            "semantic-release@23.0.6": "patches/semantic-release@23.0.6.patch"
        }
    }
}
